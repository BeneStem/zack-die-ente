{
  "name": "zack-die-ente",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "cd src && yarn install",
    "build": "cd src && yarn install && cd .. && gulp",
    "schema": "cd src && yarn install && cd .. && gulp && node functions/skill/schema.js",
    "deploy": "cd src && yarn install && cd .. && gulp && AWS_REGION=eu-west-1 apex deploy && AWS_REGION=us-east-1 apex deploy",
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "commitmsg": "validate-commit-msg"
  },
  "lint-staged": {
    "{**/,}*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "{**/,}*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "If you need help writing a valid commit message run \"yarn cz\"."
    }
  },
  "devDependencies": {
    "@types/alexa-sdk": "^1.0.9",
    "@types/request": "^2.0.3",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "del": "^3.0.0",
    "eslint": "^4.6.0",
    "gulp": "^3.9.1",
    "gulp-sequence": "^0.4.6",
    "gulp-typescript": "^3.2.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "tslint": "^5.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.5.2",
    "validate-commit-msg": "^2.14.0"
  },
  "author": {
    "name": "Benedikt Stemmildt",
    "email": "benedikt@stemmildt.com",
    "url": "https://github.com/benestem"
  },
  "license": "Apache-2.0"
}
